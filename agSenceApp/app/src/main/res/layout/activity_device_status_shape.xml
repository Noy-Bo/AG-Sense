<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/device_item_test_shape"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_white_background_frame"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="20dp"
    android:paddingBottom="5dp"
    android:paddingStart="3dp"
    android:paddingEnd="3dp">

    <ImageView
        android:id="@+id/device_status_image_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:srcCompat="@drawable/faulty_devices_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="10dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/device_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device name"
            android:textColor="@color/orange"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/device_item_account_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account name"
            android:textColor="@color/orange"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/device_item_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device type"
            android:textColor="@color/dark_blue"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:orientation="vertical"
        android:paddingEnd="10dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/device_item_fault_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Fault time"
            android:textColor="@color/dark_blue"
            android:textSize="14sp"
            android:lines="1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:background="@drawable/gradient_color_background" />

        <TextView
            android:id="@+id/device_item_last_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="17:35"
            android:textColor="@color/dark_blue"
            android:textSize="14sp"
            android:lines="1"/>
    </LinearLayout>

</LinearLayout>