<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account_item_shape"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/rounded_white_background_frame"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingStart="3dp"
    android:paddingEnd="3dp"
    android:paddingBottom="5dp"
    tools:context=".activities.AccountStatusFilter">


    <ImageView
        android:id="@+id/account_status_imageview"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        tools:srcCompat="@drawable/healthy_accounts_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="10dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/account_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:text="username"
            android:textColor="@color/orange"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/account_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:text="account name"
            android:textColor="@color/orange"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="bottom|left"
            android:text="Last update:"
            android:textColor="@color/dark_blue"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:orientation="vertical"
        android:paddingEnd="10dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/amountofdevices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:lines="1"
            android:text="3 faulty devices out of 6"
            android:textColor="@color/dark_blue"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:background="@drawable/gradient_color_background" />

        <TextView
            android:id="@+id/accountlastupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:lines="1"
            android:text="17:35"
            android:textColor="@color/dark_blue"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>